@model IEnumerable<KidsClubApplication.Models.Event>

@{
    ViewData["Title"] = "Index";
}



<!--Page Title-->
    <section class="page-title" style="background-image:url(images/banner.jpg); border-image-width: 10%;">
        <div class="auto-container">
            <div class="inner-container clearfix">
                <ul class="bread-crumb clearfix">
                    <li><a href="index.html">Home</a></li>
                    <li>Events</li>
                </ul>
                <h1>Our Events</h1>
            </div>
        </div>
    </section>
    <!--End Page Title-->

    <!-- News Section -->
    <section class="news-section">

        <p>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Create">Create New</a>
    }
</p>
        <div class="auto-container">
            <div class="row">




            <!-- News Block -->
            @foreach (var item in Model) {
            <div class="news-block" wow fadeInUp" data-wow-delay="400ms">
                <div class="clean-blog-post">
                    <div class="row">
                        <div id="demo" style=" background-color: #f9f5f0; border-radius: 20px;  padding-top: 20px; padding-bottom: 10px;">
                                <div class="col-lg-3"><img src="@Html.DisplayFor(modelItem => item.EImagePath)" alt="" style="width:255px; height:250px; float: left;"></div>
                            <div class="col-lg-9" style="float: right;">
                                    <h3>@Html.DisplayFor(modelItem => item.EventTitle)</h3>
                                <ul class="post-info">
                                        <li><span class="fa fa-calendar-alt"></span><a style="font-family:Fredoka One">@Html.DisplayFor(modelItem => item.EventDateTime)</a></li>
                                </ul>
                                <ul class="post-info">
                                        <li><a style="font-family:Fredoka One; color:#393d72">location : </a> <span>@Html.DisplayFor(modelItem => item.Location)</span></li>
                                </ul>
                                <div class="event-box">
                                    <a style="color:#000000; font-family: Rubik,sans-serif">
                                            @Html.DisplayFor(modelItem => item.EventDescription)
                                    </a>
                                </div>
                                    @if (User.IsInRole("Administrator"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.EventID">Edit</a> 
                                        <a asp-action="Delete" asp-route-id="@item.EventID">Delete</a> 
                                        <a asp-action="Details" asp-route-id="@item.EventID">Details</a> 

                                    }
                            </div>

                        </div>

                    </div>

                </div>
            </div>
            }
            </div>
        </div>
    </section>
    <!--End News Section -->

